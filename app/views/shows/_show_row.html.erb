<td class="c-table-simple__cell">
  <%= image_tag("/assets/#{show['url']}",
                :width => '80px',
                :alt => "image")
              %>
</td>

<td class="c-table-simple__cell">
  <%= show['title'] %>
</td>
<td class="c-table-simple__cell">
  <%= show['url'] %>
</td>

<td class="c-table-simple__cell">
  <%= link_to 'Edit', edit_show_path(show) %>
</td>

<td class="c-table-simple__cell">
  <%= link_to 'Delete',
    show_path(show),
    :method => :delete,
    :data => { confirm: 'Are you sure?' }
  %>
</td>

<td class="c-table-simple__cell">
  <%= link_to 'Show', show_path(show) %>
</td>
