<%= form_with model: @show, local: true do |form| %>
  <% if @show.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@show.errors.count, "error") %>
        prohibited
        this show from being saved:
      </h2>
      <ul>
        <% @show.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
  <%= form.label :title %><br>
  <%= form.text_field :title %>
  </p>

  <p>
  <%= form.label :url %><br>
  <%= form.text_field :url %>
  </p>

  <p>
  <%= form.submit %>
  </p>

<% end %>
