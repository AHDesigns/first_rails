    <ul class="c-form-list">

      <%= form_with model: @show, local: true do |form| %>
        <% if @show.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@show.errors.count, "error") %>
              prohibited
              this show from being saved:
            </h2>
            <ul>
              <% @show.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <li class="c-form-list__item">
          <%= form.label :title, class: 'c-form-label' %><br>
          <%= form.text_field :title, class: 'c-form-input' %>
        </li>

        <li class="c-form-list__item">
          <%= form.label :url, class: 'c-form-label' %><br>
          <%= form.text_area :url, class: 'c-form-input' %>
        </li>

        <%= form.submit class: 'c-btn c-btn--primary' %>
      <% end %>

    </ul>
